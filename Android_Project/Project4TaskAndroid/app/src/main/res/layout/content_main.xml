<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:text="Enter a Harry Potter Character"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <EditText
            android:layout_width="211dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/editText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="116dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/charSearch" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="116dp" android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="268dp"
            android:layout_height="129dp"
            android:id="@+id/search1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="204dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="57dp" app:srcCompat="@mipmap/harry_image"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="78dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>